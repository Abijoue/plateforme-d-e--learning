<form method="post">
      <table class="table">
        <thead class="table table-hover table-dark">
          <tr>
            <th scope="col">Num ° ID</th>
            <th scope="col">Full Name</th>
            <th scope="col"></th>
            <th scope="col"></th>
            <th scope="col"></th>
            <th scope="col"></th>

          </tr>
        </thead>
        <tbody>

          @foreach (var prof in Model.professors){
          <tr>
            <th>@prof.Id</th>
            <td>@prof.Nom <i>@prof.Prenom</i></td>
            <td> 
              <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure that u want to delete that Professor')"
              asp-page-handler="delete" asp-route-id="@prof.Id" > Delete </button>
            </td>
                <td><a asp-page="./Editinfo" asp-route-id="@prof.Id" class="btn btn-dark" > EDIT</a>  </td>
          </tr>
          }
        </tbody>
      </table>
</form>
</div>
