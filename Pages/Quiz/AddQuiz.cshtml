@page
@model MyApp.Namespace.AddQuizModel
@{
}
<div class="container p-3 my-3 bg-gradient-success text-success">
    <h1>Ajouter un Quiz</h1>
  </div>

  <div class="nav-scroller bg-white box-shadow">
        <nav class="nav nav-underline">
          <a class="nav-link" href="/Matiere/MatiereList">List des Quiz</a>
        </nav>
  </div>

  <div class="container">
  <div class="row">
    <div class="col-4">
        @* 1/3 *@
        <div>
            <br><br>
          <img src="/img/addMatiere.png" class="img-fluid animated" alt="">
        </div>
    </div>
    <div class="col-8">
      <div class="container">
        <div class="row">
          @* <div class="col-6 col-md-4"> *@
              <form method="post">
              <div class="form-group">
                  <br><br>
                @* <label asp-for="matiere.NomMatiere"  class="control-label"></label><br/> *@
                <div class="input-group input-group-sm mb-3">
                  <div class="input-group-prepend">
                    <span class="input-group-text" id="inputGroup-sizing-sm">Nom De Quiz</span>
                  </div>
                  <input type="text" class="form-control" asp-for="quiz.NomQuize" aria-label="Small" aria-describedby="inputGroup-sizing-sm">
                </div>

                <select asp-for="quiz.IdCours" class="custom-select">
                  @foreach (var cr in Model.cours)
                    {
                          <option value="@cr.IdCours">@cr.CoursName</option>
                    }
                </select>

              </div>
              <br>
              <tr></tr><tr></tr><tr></tr><input class="btn btn-success" type="Submit" value="Ajouter"/>
      
              </form>
          @* </div> *@
        </div>
      </div>
   </div>
